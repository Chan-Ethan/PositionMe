<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When pressed, color darkens (using purple_700 instead of colorPrimaryDark) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/lightLogoBlue"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/pastelBlue"/> <!-- You can change to primaryBlue or other primary color -->
            <corners android:radius="20dp"/>
        </shape>
    </item>
</selector>
